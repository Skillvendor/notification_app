<p id="notice"><%= notice %></p>

<h1>Admins</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @admins.each do |admin| %>
      <tr>
        <td><%= admin.email %></td>
        <% if admin.role != 'Admin' && admin.role != 'Master' %>
          <td><%= link_to 'Make Admin', access_path(admin), method: :patch, data: { confirm: 'Give admin?' } %></td>
        <% end %>
        <td><%= link_to 'Destroy', access_path(admin), method: :delete, data: { confirm: 'Delete admin?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>